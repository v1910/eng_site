import React from "react";

import ReactDOM from 'react-dom';

import {Global} from "Global.js";

let global = Global();

//export function ShowWordTest(dict_word) {
//ShowJokeTest - show all jokes
export function ShowJokeTest() {  
  document.getElementById('header_menu_tests').style.textDecoration = 'none';
  document.getElementById('header_menu_words').style.textDecoration = 'none';
  document.getElementById('header_menu_listen').style.textDecoration = 'none';
  document.getElementById('header_menu_phrases').style.textDecoration = 'none';

  document.getElementById('header_menu_jokes').style.textDecoration = 'underline';
  
  let work;
  let list_jokes = [];
  const renderHTML = (rawHTML: string) => React.createElement("div", { dangerouslySetInnerHTML: { __html: rawHTML } });
//console.log('global.nJokes=',global.nJokes)
//console.log('global.jokes_arr[0]=',global.jokes_arr[0])
  if(global.nJokes > 0){
    for(let i = 0; i < global.nJokes; i++){
      work = renderHTML(global.jokes_arr[i]);
      list_jokes[i] = <div key={i} className='joke_cont'>{work}</div>
    }
//console.log('list_jokes=',list_jokes)    
//console.log('list_jokes=',list_jokes[0])
  }//if
  else console.log('ShowJokeTest: There is mistake: global.nJokes = 0');
  return list_jokes;

}//---end of ShowJokeTest

