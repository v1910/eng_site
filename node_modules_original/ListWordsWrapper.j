import React from "react"

import ReactDOM from 'react-dom';

import {ShowWordTest} from "ShowWordTest.js";

import {Global} from "Global.js";

let global = Global();

export class ListWordsWrapper extends React.Component {	

  showWord(numberWordGroup) {
  
    global.count_pick_button_show_word = 0;
    global.count_pick_button_show_description = 0;
    global.curent_number_word = 0;
	  global.count_pick_button_show_answer = 0;
    global.current_number_word_group = numberWordGroup;
    
//console.log('1 global.current_number_word_group = ',global.current_number_word_group) ;	

    function ShowWordWork() {
        return <ShowWordTest />;
    }//---end of ShowWordWork
   
   	ReactDOM.render(<ShowWordWork />, document.getElementById('words_wrapper'));

  } //----end of  showWord

  noVisibilityWords(e) {
      document.getElementById('list_words_wrapper').style.visibility = 'hidden';
  //    e.target.style.background = 'red';
  } //----end of  noVisibilityWords

  render() {
//console.log('111 render this.state.state_test=',this.state.state_test);    
//console.log('111 render global.count_questions_test=',global.count_questions_test) 
//console.log('111 render global.currentTest=',global.currentTest)

	let work1, arr=[]; 
  	for(let i = 0; i < global.words_files.length; i++){
		work1 = global.words_files[i];
//console.log('work1=',work1)	
    	arr[i] = <div key={work1} id={work1} className="menu_word" fontSize="11px" onClick={this.showWord.bind(this,i)}>{work1}</div>
  	}
  	return (<div id="list_words_wrapper" onMouseLeave={this.noVisibilityWords}> {arr} </div>) 
	
  }// render

}//---end of ListWordsWrapper

